{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2015",
    "module": "commonjs",
    "lib": [
      "esnext",
      "dom"
    ],
    "allowJs": true,
    /* 方便调试，生成对应的js和ts对应的map文件*/
    "sourceMap": true,
    "outDir": "./build/server",
    "removeComments": true,
    "strict": false,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "stripInternal": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "jsx": "react",
    "resolveJsonModule": true,
  },
  "include": [
//    "libs",
//    "src"
    "src/common",
    "src/main"
  ],
  "exclude": [
    "build",
    "node_modules",
    "src/web/project/component/toolbox/rdp/client/js/rle.js"
  ]
}

